<h1 class="center"> <%= @bucketlist.bucketlist_title %></h1>


<div class="container">
  <div class="row grey lighten-2">
    <div class="col s12"><h4>Title</h4><p><%= @bucketlist.title %></p></div>
  </div>

  <div class="center">
   <%= link_to 'View Bucketlist Item', bucketlist_listitem_path(@bucketlist), 
       class:'btn blue white-text'%> 
  
  <%= link_to 'Edit Bucketlist', edit_bucketlist_path(@bucketlist), 
      class:'btn blue white-text'%>
  
  <%= link_to 'Delete bucketlist', bucketlist_path(@bucketlist), class:'btn blue white-text', 
      method: :delete, data: {confirm: 'Really Delete Trip?'} %>
  </div>
</div>
