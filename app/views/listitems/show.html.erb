<h1 class="center"> <%= @bucketlist.title %>: <%= @listitem.title %></h1>
<div class="container">
  <div class="row grey lighten-2">
    <div class="col s12 m6"><h5>Description:</h5><p><%= @listitem.description %></p></div>
    <%= @listitem.complete %>
  </div>
  <div class="center"> 
    <%= link_to 'Edit Item', edit_bucketlist_listitem_path(@bucketlist, @listitem), class: 'btn light-green white-text' %><br />
    <br />
    <%= link_to 'Delete Item', bucketlist_listitem_path(@bucketlist, @listitem), class: 'btn light-green white-text', method: :delete, data: {confirm: 'Really Delete Item?'}%>
  </div>
  <br />
  <div class="center">
    <%= link_to 'Back', bucketlist_path(@bucketlist), class: 'btn light-green white-text'%>
  </div>
 </div>
</div>
